@model Thuchanh2.Models.ProductOrders

@{
    ViewData["Title"] = "Create ProductOrder";
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
    </div>
}
<form action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="number" class="form-control" asp-for="Id" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Product Id</label>
        <input type="number" class="form-control" asp-for="ProductId" />
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Order Id</label>
        <input type="number" class="form-control" asp-for="OrderId" />
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
