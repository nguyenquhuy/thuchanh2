@model Thuchanh2.Models.ProductOrders

@{
    ViewData["Title"] = "Delete ProductOrder";
}
<h3>@ViewData["Title"]</h3>
<hr />
<form action="Delete" method="post" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity" readonly />
     
    </div>
    <div class="mb-3">
        <label class="form-label">Product Name</label>
        <input type="text" class="form-control" asp-for="ProductId" readonly />
     
    </div>
    <div class="mb-3">
        <label class="form-label">Order Id</label>
        <input type="text" class="form-control" asp-for="OrderId" readonly />

    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-danger" onclick="return function('Are you sure to delete this order')">Delete</button>
    </div>
</form>