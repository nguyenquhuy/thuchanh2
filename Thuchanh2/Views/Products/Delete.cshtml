@model Thuchanh2.Models.Products

@{
    ViewData["Title"] = "Delete Product";
}
<h3>@ViewData["Title"]</h3>
<hr />
<form action="Delete" method="post" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Price" readonly />
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-danger" onclick="return function('Are you sure to delete this order')">Delete</button>
    </div>
</form>