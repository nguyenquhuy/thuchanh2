@model Thuchanh2.Models.Orders

@{
    ViewData["Title"] = "Delete Order";
}
<h3>@ViewData["Title"]</h3>
<hr />
<form action="Delete" method="post" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Order Date</label>
        <input type="date" class="form-control" asp-for="OrderDate" readonly />
     
    </div>
    <div class="mb-3">
        <label class="form-label">Customer Id</label>
        <input type="text" class="form-control" asp-for="CustomerId" readonly />
     
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-danger" onclick="return function('Are you sure to delete this order')">Delete</button>
    </div>
</form>